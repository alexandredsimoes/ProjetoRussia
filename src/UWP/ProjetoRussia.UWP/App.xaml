<prismUnity:PrismUnityApplication
    x:Class="ProjetoRussia.UWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prismUnity="using:Prism.Unity.Windows"
    xmlns:converters="using:ProjetoRussia.UWP.Helpers"
    xmlns:con="using:Microsoft.Toolkit.Uwp.Helpers"
    RequestedTheme="Light">

    <prismUnity:PrismUnityApplication.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/_Colors.xaml"/>
                <ResourceDictionary Source="/Styles/_FontSizes.xaml"/>
                <ResourceDictionary Source="/Styles/_Thickness.xaml"/>

                <ResourceDictionary Source="/Styles/TextBlock.xaml"/>
                <ResourceDictionary Source="/Styles/Page.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:BinaryToImageConverter x:Key="BinaryToImageConverter" />

        </ResourceDictionary>
        
    </prismUnity:PrismUnityApplication.Resources>
</prismUnity:PrismUnityApplication>
